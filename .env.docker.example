# Docker Compose Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# Environment Mode
# ============================================
ENVIRONMENT=development  # or 'production'

# ============================================
# Container Configuration
# ============================================
# Add suffix to container names (e.g., '-prod' for production)
CONTAINER_SUFFIX=

# Restart policy: 'unless-stopped' (dev) or 'always' (prod)
RESTART_POLICY=unless-stopped

# ============================================
# Service Ports
# ============================================
MYSQL_PORT=3306
REDIS_PORT=6379
BACKEND_PORT=8000
AI_ORCHESTRATOR_PORT=8001
FRONTEND_PORT=3000

# ============================================
# MySQL Configuration
# ============================================
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=aae_platform
MYSQL_USER=aae_user
MYSQL_PASSWORD=aae_password
MYSQL_START_PERIOD=10s

# ============================================
# Redis Configuration
# ============================================
# Leave empty for development (no password)
# Set password for production
REDIS_PASSWORD=

# ============================================
# Application Security
# ============================================
SECRET_KEY=your-secret-key-change-in-production
TOKEN_ENCRYPTION_KEY=
WEB_PLATFORM_SERVICE_TOKEN=

# ============================================
# OAuth (Google Login)
# ============================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ============================================
# Payment (Stripe)
# ============================================
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ============================================
# Google Cloud Storage (Primary Storage)
# ============================================
GCS_PROJECT_ID=
GCS_CREDENTIALS_PATH=/path/to/service-account-key.json
GCS_BUCKET_CREATIVES=aae-creatives
GCS_BUCKET_LANDING_PAGES=aae-landing-pages
GCS_BUCKET_EXPORTS=aae-exports
GCS_BUCKET_UPLOADS=aae-user-uploads
GCS_CDN_DOMAIN=

# ============================================
# AWS Configuration (Optional)
# ============================================
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SESSION_TOKEN=

# AWS S3 (Alternative Storage Backend)
S3_BUCKET_CREATIVES=aae-creatives
S3_BUCKET_LANDING_PAGES=aae-landing-pages
S3_BUCKET_EXPORTS=aae-exports
S3_BUCKET_UPLOADS=aae-user-uploads
CLOUDFRONT_DOMAIN=

# AWS Bedrock (Alternative LLM Provider)
BEDROCK_REGION=us-west-2
BEDROCK_DEFAULT_MODEL=global.anthropic.claude-sonnet-4-5-20250929-v1:0
BEDROCK_TEMPERATURE=0.7
BEDROCK_MAX_TOKENS=4096

# AWS SageMaker (Custom Models)
SAGEMAKER_REGION=us-west-2
SAGEMAKER_QWEN_IMAGE_ENDPOINT=
SAGEMAKER_WAN_VIDEO_ENDPOINT=

# ============================================
# Gemini API (Primary AI Provider)
# ============================================
GEMINI_API_KEY=
GEMINI_MODEL_CHAT=gemini-2.5-flash
GEMINI_MODEL_FAST=gemini-2.5-flash

# ============================================
# Frontend URLs
# ============================================
# Development
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Production (uncomment and set for production)
# NEXT_PUBLIC_API_URL=https://api.yourdomain.com
# NEXT_PUBLIC_WS_URL=wss://api.yourdomain.com

FRONTEND_TARGET=development  # or 'production'
NODE_ENV=development

# ============================================
# CORS Configuration
# ============================================
# Production only
CORS_ORIGINS=

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_MAX_SIZE=50m    # Max size per log file (10m for production)
LOG_MAX_FILES=3     # Number of log files to keep

# ============================================
# Health Check Timing
# ============================================
BACKEND_START_PERIOD=10s    # Increase to 40s for production
AI_START_PERIOD=10s         # Increase to 40s for production
