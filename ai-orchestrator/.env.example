# AI Orchestrator Environment Configuration
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME=AI Orchestrator
ENVIRONMENT=development
LOG_LEVEL=INFO

# Gemini API Configuration (REQUIRED)
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key

# Gemini Models
GEMINI_MODEL_CHAT=gemini-3-flash-preview
GEMINI_MODEL_FAST=gemini-2.5-flash
GEMINI_MODEL_IMAGEN=gemini-2.5-flash-image

# Web Platform Integration
WEB_PLATFORM_URL=http://localhost:8000
WEB_PLATFORM_SERVICE_TOKEN=your-service-token-must-match-backend

# Redis Configuration
REDIS_URL=redis://localhost:6379/3
REDIS_MAX_CONNECTIONS=10
REDIS_SOCKET_TIMEOUT=5.0
REDIS_SOCKET_CONNECT_TIMEOUT=5.0

# Performance Settings
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=60

# ============================================================================
# Storage Configuration - AWS S3
# ============================================================================
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=  # Optional if using IAM roles
AWS_SECRET_ACCESS_KEY=  # Optional if using IAM roles
AWS_SESSION_TOKEN=  # Optional for temporary credentials

# S3 Buckets
S3_BUCKET_CREATIVES=aae-creatives           # All creative assets (user-uploaded + AI-generated)
S3_BUCKET_LANDING_PAGES=aae-landing-pages  # Landing page HTML files (with CloudFront CDN)
S3_BUCKET_EXPORTS=aae-exports              # Data export files

# ============================================================================
# AWS Bedrock Configuration
# ============================================================================
BEDROCK_REGION=us-west-2
BEDROCK_DEFAULT_MODEL=global.anthropic.claude-sonnet-4-5-20250929-v1:0
BEDROCK_TEMPERATURE=0.7
BEDROCK_MAX_TOKENS=8000

# ============================================================================
# AWS SageMaker Configuration
# ============================================================================
SAGEMAKER_REGION=us-west-2
SAGEMAKER_QWEN_IMAGE_ENDPOINT=  # SageMaker endpoint for Qwen-Image model
SAGEMAKER_WAN_VIDEO_ENDPOINT=  # SageMaker endpoint for Wan2.2 video model
