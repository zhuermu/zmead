# Application
APP_NAME="AAE Web Platform"
APP_VERSION="0.1.0"
DEBUG=true
ENVIRONMENT=development

# Security
SECRET_KEY=your-super-secret-key-change-in-production
TOKEN_ENCRYPTION_KEY=your-32-byte-encryption-key!!

# Database - MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=aae_user
MYSQL_PASSWORD=your-mysql-password
MYSQL_DATABASE=aae_platform

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Google Cloud Storage (GCS)
GCS_PROJECT_ID=your-gcp-project-id
GCS_CREDENTIALS_PATH=  # Path to service account JSON (optional if using ADC)
GCS_BUCKET_CREATIVES=aae-creatives
GCS_BUCKET_LANDING_PAGES=aae-landing-pages
GCS_BUCKET_EXPORTS=aae-exports
GCS_CDN_DOMAIN=  # Custom domain or Cloud CDN domain (optional)
GCS_BUCKET_UPLOADS_TEMP=aae-user-uploads-temp  # Temporary file uploads (48h lifecycle)
GCS_BUCKET_UPLOADS=aae-user-uploads  # All file uploads (permanent storage)

# Gemini API
GEMINI_API_KEY=your-gemini-api-key

# OAuth - Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback

# Google Ads API
GOOGLE_ADS_DEVELOPER_TOKEN=your-google-ads-developer-token
GOOGLE_ADS_LOGIN_CUSTOMER_ID=  # Optional: Your Manager Account ID (MCC)

# OAuth - Facebook (placeholder)
FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret
FACEBOOK_REDIRECT_URI=http://localhost:3000/api/auth/callback/facebook

# Stripe (placeholder)
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# CORS
CORS_ORIGINS=["http://localhost:3000"]

# AI Orchestrator
AI_ORCHESTRATOR_URL=http://localhost:8001
AI_ORCHESTRATOR_TIMEOUT=60
AI_ORCHESTRATOR_SERVICE_TOKEN=your-service-token-for-ai-orchestrator

# Development - Set to true to disable authentication (local development only)
DISABLE_AUTH=false
