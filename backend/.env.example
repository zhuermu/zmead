# AAE Backend Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# Application
# ============================================================================
APP_NAME="AAE Web Platform"
APP_VERSION="0.1.0"
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=INFO

# ============================================================================
# Security
# ============================================================================
SECRET_KEY=your-super-secret-key-change-in-production
TOKEN_ENCRYPTION_KEY=your-32-byte-encryption-key!!

# ============================================================================
# Database - MySQL
# ============================================================================
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=aae_user
MYSQL_PASSWORD=your-mysql-password
MYSQL_DATABASE=aae_platform
# Or use direct DATABASE_URL:
# DATABASE_URL=mysql+aiomysql://aae_user:aae_password@localhost:3306/aae_platform

# ============================================================================
# Redis
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
# Or use direct REDIS_URL:
# REDIS_URL=redis://localhost:6379/0

# ============================================================================
# Storage Configuration - AWS S3
# ============================================================================
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=  # Optional if using IAM roles
AWS_SECRET_ACCESS_KEY=  # Optional if using IAM roles
AWS_SESSION_TOKEN=  # Optional for temporary credentials

# S3 Buckets
S3_BUCKET_CREATIVES=aae-creatives           # All creative assets (user-uploaded + AI-generated)
S3_BUCKET_LANDING_PAGES=aae-landing-pages  # Landing page HTML files (with CloudFront CDN)
S3_BUCKET_EXPORTS=aae-exports              # Data export files

# CloudFront CDN (required for landing pages public access)
CLOUDFRONT_DOMAIN=landing.zmead.com  # CloudFront distribution domain for landing pages

# ============================================================================
# AI Provider Configuration
# ============================================================================
# Gemini API (Primary AI Provider)
GEMINI_API_KEY=your-gemini-api-key

# AWS Bedrock (Alternative LLM Provider)
# Uncomment if using Bedrock:
# BEDROCK_REGION=us-west-2
# BEDROCK_DEFAULT_MODEL=global.anthropic.claude-sonnet-4-5-20250929-v1:0
# BEDROCK_TEMPERATURE=0.7
# BEDROCK_MAX_TOKENS=4096

# AWS SageMaker (For custom open-source models)
# Uncomment if using SageMaker endpoints:
# SAGEMAKER_REGION=us-west-2
# SAGEMAKER_QWEN_IMAGE_ENDPOINT=  # SageMaker endpoint for Qwen-Image model
# SAGEMAKER_WAN_VIDEO_ENDPOINT=  # SageMaker endpoint for Wan2.2 video model

# ============================================================================
# OAuth - Google
# ============================================================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback

# ============================================================================
# Ad Platform APIs
# ============================================================================
# Google Ads API
GOOGLE_ADS_DEVELOPER_TOKEN=your-google-ads-developer-token
GOOGLE_ADS_LOGIN_CUSTOMER_ID=  # Optional: Your Manager Account ID (MCC)

# Meta (Facebook/Instagram) - Placeholder
FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret
FACEBOOK_REDIRECT_URI=http://localhost:3000/api/auth/callback/facebook
# META_APP_ID=your-meta-app-id
# META_APP_SECRET=your-meta-app-secret

# TikTok - Placeholder
# TIKTOK_APP_ID=your-tiktok-app-id
# TIKTOK_APP_SECRET=your-tiktok-app-secret

# ============================================================================
# Payment - Stripe
# ============================================================================
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=

# ============================================================================
# Celery (Background Tasks)
# ============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ============================================================================
# CORS
# ============================================================================
CORS_ORIGINS=["http://localhost:3000"]

# ============================================================================
# AI Orchestrator Integration
# ============================================================================
AI_ORCHESTRATOR_URL=http://localhost:8001
AI_ORCHESTRATOR_TIMEOUT=60
AI_ORCHESTRATOR_SERVICE_TOKEN=your-service-token-for-ai-orchestrator
# Note: WEB_PLATFORM_SERVICE_TOKEN must match this value

# ============================================================================
# API Configuration
# ============================================================================
API_V1_PREFIX=/api/v1
MAX_UPLOAD_SIZE=209715200  # 200MB in bytes
PRESIGNED_URL_EXPIRATION=3600  # seconds

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# ============================================================================
# Credit System
# ============================================================================
DEFAULT_CREDITS=100
CREDIT_COST_IMAGE_GENERATION=5
CREDIT_COST_VIDEO_GENERATION=10
CREDIT_COST_LANDING_PAGE=10
CREDIT_COST_COMPETITOR_ANALYSIS=3
CREDIT_COST_PERFORMANCE_INSIGHTS=1

# ============================================================================
# Development - Set to true to disable authentication (local development only)
# ============================================================================
DISABLE_AUTH=false

# ============================================================================
# Beta Access Control
# ============================================================================
# Super Admin Emails - Comma-separated list of admin emails (auto-approved on login)
# These users will have full access to the platform and user management features
# Example: admin@company.com,admin2@company.com
SUPER_ADMIN_EMAILS=

# ============================================================================
# Production Settings (uncomment for production)
# ============================================================================
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=WARNING
# CORS_ORIGINS=["https://yourdomain.com"]
# For production, use AWS Secrets Manager or similar for sensitive values
# For production on AWS, use IAM roles instead of access keys:
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
