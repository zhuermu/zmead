{
  "name": "aae-e2e-tests",
  "version": "1.0.0",
  "description": "E2E tests for AAE AI Agent capabilities",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:creative": "playwright test agent_capabilities.spec.ts -g 'Creative Generation'",
    "test:campaign": "playwright test agent_capabilities.spec.ts -g 'Campaign Management'",
    "test:performance": "playwright test agent_capabilities.spec.ts -g 'Performance Analytics'",
    "test:landing": "playwright test agent_capabilities.spec.ts -g 'Landing Page'",
    "test:market": "playwright test agent_capabilities.spec.ts -g 'Market Intelligence'",
    "test:errors": "playwright test agent_capabilities.spec.ts -g 'Error Handling'",
    "test:conversation": "playwright test agent_capabilities.spec.ts -g 'Multi-step'",
    "test:tools": "playwright test agent_capabilities.spec.ts -g 'Tool Execution'",
    "test:human-loop": "playwright test agent_capabilities.spec.ts -g 'Human-in-the-Loop'",
    "report": "playwright show-report",
    "install": "playwright install chromium"
  },
  "keywords": [
    "e2e",
    "playwright",
    "ai-agent",
    "testing"
  ],
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}
